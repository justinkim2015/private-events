<%= render "shared/flash" %>

<ul>
  <li><%= p @event.place %></li>
  <li><%= p @event.date %></li>
  <li><%= p @event.creator.email %></li>
</ul>

<h2>Attendees</h2>
<ul>
  <% @event.attendees.each do |person| %>
    <li><%= p person.email %></li>
  <% end %>
</ul>


<% if @event.attendee_ids.include?(current_user.id) %>
  <%= button_to "Unattend", event_attendee_path(@event), method: :delete %>
<% else %>
<%= button_to "Attend", event_attendees_path(event_attendee: {attended_event_id: @event.id, attendee_id: current_user.id}) %>
<% end %>

<% if current_user.id == @event.creator.id %>
  <%= button_to "Delete", event_path(@event), method: :delete %>
  <%= button_to "Edit", edit_event_path(@event), method: :get %>
<% end %>

<%= link_to "Back", root_path %>
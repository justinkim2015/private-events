<%= render "shared/navbar" %>

<div class="columns m-4">
  <div class="column has-text-centered">
    <div class="box mt-6">
      <h3 class="is-size-4 mb-2">Created Events:</h3>
      <ul>
        <% @user.created_events.each do |event| %>
          <li><%= link_to "#{event.place}", event_path(event.id) %></li>
        <% end %>
      </ul>
    </div>
  </div>
  
  <div class="column has-text-centered">
    <div class="box mt-6">
      <h3 class="is-size-4 mb-2">Future Events:</h3>
      <% @user.attended_events.each do |event| %>
        <ul>
          <% if event.date > Time.now %>
          <li><%= link_to "#{event.place}", event_path(event.id) %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  
  <div class="column has-text-centered">
    <div class="box mt-6">
      <h3 class="is-size-4 mb-2">Past Events:</h3>
      <% @user.attended_events.each do |event| %>
        <ul>
          <% if event.date < Time.now %>
          <li><%= link_to "#{event.place}", event_path(event.id) %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <div class="column is-2">
    <div class="box mt-6">
      <h3 class="is-size-4 mb-2">Invites:</h3>
      <% @user.invited_event.each do |event| %>
        <ul>
          <li>
            <div class="is-flex">
              <%= link_to invite.title, event_path(event.id) %>--
              <%= button_to "Accept", invite_path(1000), method: :post %>
              <%= button_to "Decline", 
              invite_path(event.id), method: :delete %>
              <%# This above path is linking to the event id, I need to find the Invite id %>
            </div>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
